@model IEnumerable<Vidly.Models.Movie>
@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
	Read Only list, without delete, intended for guest.
*@

<h2>Movies</h2>

<table id="movies" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Movies</th>
			<th>Genre</th>

		</tr>
	</thead>
	<tbody>

	</tbody>
</table>


@section scripts
{
	<script>
		// Use DataTable framework to get the movies list from our API,
		// Then, populate the table with the objects from the list.
		$(document).ready(function () {
			var table = $("#movies").DataTable({
				ajax: {
					url: "/api/movies",
					dataSrc: "" // Empty string is because we don't need to go deeper in the result.
				},
				columns: [
					{
						data: "name"
					},
					{
						data: "genre.name"
					}
				]
			});
		});
	</script>
}
